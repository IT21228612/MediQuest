<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bkgrnd">






    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:background="@drawable/custom_edittext">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="REJECTION"
                android:textSize="36dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/Lavander">

            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reason for the Rejection"
                android:id="@+id/RejectionreasonText"
                android:padding="8dp"
                android:layout_marginTop="50dp"
                android:textColor="@color/Lavander"
                android:textSize="18sp">

            </TextView>

            <EditText
                android:id="@+id/rejectionReason"
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="8dp"
                android:hint="Reasons for the Rejection"
                android:padding="8dp"
                android:textColor="@color/black">

            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="INSTRUCTIONS"
                android:id="@+id/instructionText"
                android:padding="8dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/Lavander"
                android:textSize="18sp">

            </TextView>

            <EditText
                android:id="@+id/doctorInstruction"
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="8dp"
                android:hint="Instructions"
                android:padding="8dp"
                android:textColor="@color/black">

            </EditText>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Rejected"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="@color/Lavander"
                android:id="@+id/rejectedbtn"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                app:cornerRadius = "20dp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="Cancel"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="@color/Lavander"
                android:id="@+id/rejectionCancelbtn"
                android:textSize="18sp"
                android:layout_marginTop="30dp"
                app:cornerRadius = "20dp"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>