<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bkgrnd"
    tools:context=".RegisterPharmacist">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp"
            android:background="@drawable/custom_edittext">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ADD MEDICINE "
                android:textSize="36dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/Lavander">

            </TextView>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/medicineName"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="30dp"
                android:padding="8dp"
                android:hint="Medicine Name"
                android:drawableLeft="@drawable/baseline_person_24"
                android:drawablePadding="8dp"
                android:textColor="@color/black">

            </EditText>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/medicineDosage"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="5dp"
                android:padding="8dp"
                android:hint="Dosage Strength(mg/ml)"
                android:drawableLeft="@drawable/baseline_person_24"
                android:drawablePadding="8dp"
                android:textColor="@color/black">

            </EditText>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/medicinemanufacturer"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="5dp"
                android:padding="8dp"
                android:hint="Manufacturer Information"
                android:drawableLeft="@drawable/baseline_email_24"
                android:drawablePadding="8dp"
                android:textColor="@color/black">

            </EditText>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/medicineQuentity"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="5dp"
                android:padding="8dp"
                android:hint="Package Quentity"
                android:drawableLeft="@drawable/baseline_location_on_24"
                android:drawablePadding="8dp"
                android:textColor="@color/black">

            </EditText>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/medicinePricePerUnit"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="5dp"
                android:padding="8dp"
                android:hint="Price per unit (LKR)"
                android:drawableLeft="@drawable/baseline_text_fields_24"
                android:drawablePadding="8dp"
                android:textColor="@color/black">

            </EditText>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/medicineMdate"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="5dp"
                android:padding="8dp"
                android:hint="Manufacturer Date"
                android:drawableLeft="@drawable/baseline_numbers_24"
                android:drawablePadding="8dp"
                android:textColor="@color/black">

            </EditText>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/medicineEdate"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="5dp"
                android:padding="8dp"
                android:hint="Expiery Date"
                android:drawableLeft="@drawable/baseline_password_24"
                android:drawablePadding="8dp"
                android:textColor="@color/black">

            </EditText>
            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="ADD"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="@color/Lavander"
                android:id="@+id/medicineAdd"
                android:textSize="29sp"
                android:layout_marginTop="30dp"
                app:cornerRadius = "20dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="View"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:backgroundTint="@color/Lavander"
                android:id="@+id/medicineView"
                android:textSize="29sp"
                android:layout_marginTop="20dp"
                app:cornerRadius = "50dp"/>




        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>